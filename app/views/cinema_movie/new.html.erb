<% if current_user.role == "admin" %>
  <%= form_with url: '/cinema_movie', method: :post do |form| %>

    <div class="form-group">
      <h3>select your cinema</h3>
      <%= form.label :cinema_id %>
      <%= form.collection_select :cinema_id, Cinema.order(:name),:id,:name %>
    </div>

    <div class= "form-group">
      <h3>select your movie</h3>
      <%= form.label :movie_id %>
      <%= form.collection_select :movie_id, Movie.order(:name),:id,:name %>
    <div>

    <div class = "action">
      <%= form.submit %>
    </div>
    <%= link_to "back", cinema_movie_index_path %>
  <% end %>
<% end %>