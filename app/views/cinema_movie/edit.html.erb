<%= form_with model: @cinema_movie do |form| %>

   <div class="form-group">
    <h1>select your cinema</h1>
      <%= form.label :cinema_id %>
      <%= form.collection_select :cinema_id, Cinema.order(:name),:id,:name %>
  </div>

  <div class= "form-group">
    <h1>select your movie</h1>
    <%= form.label :movie_id %>
    <%= form.collection_select :movie_id, Cinema.order(:name),:id,:name %>
  <div>

   <div class = "action">
     <%= form.submit %>
   </div>
<% end %>