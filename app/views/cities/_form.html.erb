<% if current_user.role == "admin" %>
  <h1>Create a new City</h1>

  <%= form_with model: @city do |form| %>
    <ul>
      <% @city.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
    <div>
      <%= form.label :name  %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :state %>
      <%= form.text_area :state %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
<% end %>

