<h3>All cities</h3>
<%= link_to "new city", new_city_path %>
<table>
  <thead>
    <tr>
      <th>city name</th>
      <th>action </th>
    <tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= link_to "edit", edit_city_path(city) %></td>
        <td><%= button_to "Destroy", city, method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "back", root_path %>

