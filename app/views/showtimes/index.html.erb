<% if current_user.role == "admin" %>
  <h3>showtime information</h3>
  <%= link_to "new showtime", new_showtime_path %>
  <table>
    <thead>
      <tr>
        <th>startime</th>
      <tr>
    </thead>

    <tbody>
      <% @showtimes.each do |showtime| %>
        <tr>
          <td><%= showtime.startime.strftime('%I:%M %p') %></td>
          <td><%= link_to "edit", edit_showtime_path(showtime) %></td>
          <td><%= button_to "Destroy", showtime, method: :delete, data: { confirm: 'Are you sure?'} %></td>
        <tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "back", root_path %>
<% end %>


